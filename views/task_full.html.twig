{% extends "base.html.twig" %}

{% block content %}
    <div class="col-sm-10 col-xs-8 col-sm-offset-1">
        <div class="panel panel-default">
            <div class="panel-body">
                <p class="lead">{{ task_data.title }}</p>
                <p>Status: <strong>{{ task_data.status }}</strong></p>
                <p>Автор: <strong>{{ task_data.author_name }}</strong></p>
                <p>Email: <strong>{{ task_data.author_email }}</strong></p>
                <p>Description: <br>
                    {{ task_data.text }}
                </p>
                {% if is_logged_in %}
                    <a href="/edit-task/{{ task_data.id }}">Edit task</a>
                {% endif %}
            </div>

            {% if task_data.image_path|length > 0 %}
                <div class="panel-thumbnail">
                    <a href="/task/{{ task_data.id }}">
                        <img src="{{ task_data.image_path }}" class="img-responsive">
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
